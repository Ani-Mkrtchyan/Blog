{
  "compilerOptions": {
    
    "target": "es6",                               
    "module": "commonjs",                          
    "allowJs": true,                           
     "outDir": "./dist",                             
     "rootDir": "./src",                             
     "removeComments":true,                     
     "noEmitOnError":true,
     "strict": true,                                 
     "noImplicitAny": true,                       
     "strictNullChecks": true,                    
     "moduleResolution": "node",                
     "esModuleInterop": true,                       
     "skipLibCheck": true,                          
     "forceConsistentCasingInFileNames": true       
    
  },

  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]


}
